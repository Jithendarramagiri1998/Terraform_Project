pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/Jithendarramagiri1998/Terraform_Project'
            }
        }

         stage('Terraform Init & Apply') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'aws-ec2-key', keyFileVariable: 'PRIVATE_KEY')]) {
                    script {
                        // Write the private key to a temporary file for Terraform
                        writeFile(file: '/tmp/terraform-private-key.pem', text: "${PRIVATE_KEY}")

                        // Run Terraform commands
                        sh '''
                        
                            terraform apply -auto-approve -var "private_key=/tmp/terraform-private-key.pem" -var "key_name=your-key-name"
                        '''
                    }
                }
            }
        }

        stage('Deploy Tomcat Container') {
            steps {
                sh 'bash deploy.sh'
            }
        }
    }

    post {
        success {
            echo "Deployment Successful!"
        }
        failure {
            echo "Deployment Failed!"
        }
    }
}
