pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/Jithendarramagiri1998/Terraform_Project/tree/main/Terraform_Project'
            }
        }

        stage('Terraform Init & Apply') {
            steps {
                sh '''
                terraform init
                terraform apply -auto-approve
                '''
            }
        }

        stage('Deploy Tomcat Container') {
            steps {
                sh 'bash deploy.sh'
            }
        }
    }

    post {
        success {
            echo "Deployment Successful!"
        }
        failure {
            echo "Deployment Failed!"
        }
    }
}
